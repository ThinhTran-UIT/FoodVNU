@using BanHang.Models;
@model IEnumerable<Product>

@foreach (var item in Model)
{

    <li class="standard" data-price="28">
        <a href="product.html" title="Lisette Dress">
            <div class="image">
                <img class="primary" src="@Url.Content("~/Content/img/HinhSP/" + item.Image)" alt="Lisette Dress" />
                @*<img class="secondary" src="@Url.Content("~/Content/img/HinhSP/" + item.Image)" alt="Lisette Dress" />*@
            </div>
            <div class="title">
                <div class="prices">
                    <span class="price">@item.Price VND</span>
                </div>
                <h3>@item.Name</h3>
            </div>
        </a>
    </li>
}
